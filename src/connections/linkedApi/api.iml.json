{
  // Request used by Make to validate the connection during creation
  "url": "https://api.linkedapi.io/automation/validate",
  "method": "POST",
  "headers": {
    "linked-api-token": "{{parameters.linkedApiToken}}",
    "identification-token": "{{parameters.identificationToken}}",
    "client": "make",
    "Content-Type": "application/json"
  },

  // Response handling
  "response": {
    // Show a static label in the connection chip
    "metadata": {
      "type": "text",
      "value": "Linked API"
    },
    "error": {
      // Linked API returns `{ success: false, error: { message } }`
      "message": "[{{statusCode}}] {{body.error.message || body.error || body}}"
    }
  },

  // Logs
  "log": {
    "sanitize": [
      "request.headers.linked-api-token",
      "request.headers.identification-token"
    ]
  }
}
