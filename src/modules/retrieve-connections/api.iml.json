[
  {
    "url": "/workflows",
    "method": "POST",
    "body": {
      "operationName": "retrieveConnections",
      "data": {
        "limit": "{{parameters.limit}}",
        "filter": {
          "firstName": "{{parameters.firstName}}",
          "lastName": "{{parameters.lastName}}",
          "position": "{{parameters.position}}",
          "locations": "{{parameters.locations}}",
          "industries": "{{parameters.industries}}",
          "currentCompanies": "{{parameters.currentCompanies}}",
          "previousCompanies": "{{parameters.previousCompanies}}",
          "schools": "{{parameters.schools}}"
        }
      }
    },
    "response": {
      "temp": {
        "workflowId": "{{body.workflowId}}",
        "operationName": "retrieveConnections"
      }
    }
  },
  {
    "url": "/workflows/{{temp.workflowId}}?operationName={{temp.operationName}}",
    "method": "GET",
    "repeat": {
      "condition": "{{body.status !== 'completed'}}",
      "delay": 2000,
      "limit": 1800
    },
    "response": {
      "temp": {
        "status": "{{body.status}}",
        "data": "{{body.data}}",
        "errors": "{{body.errors}}"
      }
    }
  },
  {
    "response": {
      "valid": "{{temp.status === 'completed'}}",
      "error": {
        "message": "Workflow timed out or did not complete."
      },
      "output": {
        "data": "{{temp.data}}",
        "errors": "{{temp.errors}}"
      }
    }
  }
]
