[
  {
    "url": "/workflows",
    "method": "POST",
    "body": {
      "operationName": "nvSearchCompanies",
      "data": {
        "term": "{{parameters.searchTerm}}",
        "limit": "{{parameters.limit}}",
        "filter": {
          "locations": "{{parameters.locations}}",
          "industries": "{{parameters.industries}}",
          "sizes": "{{parameters.sizes}}",
          "annualRevenue": "{{if(parameters.annualRevenueMin && parameters.annualRevenueMax, { min: parameters.annualRevenueMin, max: parameters.annualRevenueMax }, undefined)}}"
        }
      }
    },
    "response": {
      "temp": {
        "workflowId": "{{body.workflowId}}",
        "operationName": "nvSearchCompanies"
      }
    }
  },
  {
    "url": "/workflows/{{temp.workflowId}}?operationName={{temp.operationName}}",
    "method": "GET",
    "repeat": {
      "condition": "{{body.status !== 'completed'}}",
      "delay": 5000,
      "limit": 1800
    },
    "response": {
      "temp": {
        "status": "{{body.status}}",
        "data": "{{body.data}}",
        "errors": "{{body.errors}}"
      }
    }
  },
  {
    "response": {
      "valid": "{{temp.status === 'completed'}}",
      "error": {
        "message": "Workflow timed out or did not complete."
      },
      "output": {
        "data": "{{temp.data}}",
        "errors": "{{temp.errors}}"
      }
    }
  }
]

