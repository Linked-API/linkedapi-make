[
  {
    "url": "/workflows",
    "method": "POST",
    "body": {
      "operationName": "commentOnPost",
      "data": {
        "postUrl": "{{parameters.postUrl}}",
        "text": "{{parameters.commentText}}"
      }
    },
    "response": {
      "temp": {
        "workflowId": "{{body.workflowId}}",
        "operationName": "commentOnPost"
      }
    }
  },
  {
    "url": "/workflows/{{temp.workflowId}}?operationName={{temp.operationName}}",
    "method": "GET",
    "repeat": {
      "condition": "{{body.status !== 'completed'}}",
      "delay": 5000,
      "limit": 1800
    },
    "response": {
      "temp": {
        "status": "{{body.status}}",
        "data": "{{body.data}}",
        "errors": "{{body.errors}}"
      }
    }
  },
  {
    "response": {
      "valid": "{{temp.status === 'completed'}}",
      "error": {
        "message": "Workflow timed out or did not complete."
      },
      "output": {
        "data": "{{temp.data}}",
        "errors": "{{temp.errors}}"
      }
    }
  }
]
