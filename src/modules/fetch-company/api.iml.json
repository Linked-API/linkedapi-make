[
  {
    "url": "/workflows",
    "method": "POST",
    "body": {
      "operationName": "fetchCompany",
      "data": {
        "companyUrl": "{{parameters.companyUrl}}",
        "retrieveEmployees": "{{parameters.retrieveEmployees}}",
        "retrieveDMs": "{{parameters.retrieveDMs}}",
        "retrievePosts": "{{parameters.retrievePosts}}",
        "employeeRetrievalConfig": "{{if(parameters.retrieveEmployees, { limit: parameters.employeeLimit }, undefined)}}",
        "dmRetrievalConfig": "{{if(parameters.retrieveDMs, { limit: parameters.dmsLimit }, undefined)}}",
        "postRetrievalConfig": "{{if(parameters.retrievePosts, { limit: parameters.postsLimit, since: parameters.postsSince }, undefined)}}"
      }
    },
    "response": {
      "temp": {
        "workflowId": "{{body.workflowId}}",
        "operationName": "fetchCompany"
      }
    }
  },
  {
    "url": "/workflows/{{temp.workflowId}}?operationName={{temp.operationName}}",
    "method": "GET",
    "repeat": {
      "condition": "{{body.status !== 'completed'}}",
      "delay": 5000,
      "limit": 1800
    },
    "response": {
      "temp": {
        "status": "{{body.status}}",
        "data": "{{body.data}}",
        "errors": "{{body.errors}}"
      }
    }
  },
  {
    "response": {
      "valid": "{{temp.status === 'completed'}}",
      "error": {
        "message": "Workflow timed out or did not complete."
      },
      "output": {
        "data": "{{temp.data}}",
        "errors": "{{temp.errors}}"
      }
    }
  }
]

